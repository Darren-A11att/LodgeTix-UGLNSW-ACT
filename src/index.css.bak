@tailwind base;
@tailwind components;
@tailwind utilities;

/* Import mobile optimizations */
@import './mobile-optimizations.css';

@layer base {
  :root {
    --color-primary: 25 59 103; /* Navy Blue */
    --color-secondary: 180 159 95; /* Gold */
    --color-accent: 130 20 30; /* Deep Red */
  }
  
  body {
    @apply bg-slate-50 text-slate-900 font-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    @apply font-serif;
  }

  /* Optimize form elements for touch */
  input[type="text"],
  input[type="email"],
  input[type="tel"],
  input[type="password"],
  input[type="number"],
  select,
  textarea {
    @apply h-12 px-4 py-2 text-base border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary w-full;
    font-size: 16px !important; /* Prevent iOS zoom */
  }

  /* Improve checkbox/radio touch targets */
  input[type="checkbox"],
  input[type="radio"] {
    @apply h-5 w-5;
    min-width: 20px;
    min-height: 20px;
  }
  
  /* Labels for form controls */
  label {
    @apply mb-1 block text-sm font-medium text-slate-700;
  }

  @media (max-width: 640px) {
    input[type="text"],
    input[type="email"],
    input[type="tel"],
    input[type="password"],
    input[type="number"],
    select,
    textarea {
      @apply h-14 px-4 py-3 text-base;
    }

    input[type="checkbox"],
    input[type="radio"] {
      @apply h-6 w-6;
      min-width: 24px;
      min-height: 24px;
    }
  }
}

@layer components {
  .btn-primary {
    @apply bg-primary text-white px-6 py-3 rounded-md font-medium hover:bg-primary/90 transition-colors min-h-[48px] min-w-[120px] text-center flex items-center justify-center touch-manipulation;
  }
  
  .btn-secondary {
    @apply bg-secondary text-white px-6 py-3 rounded-md font-medium hover:bg-secondary/90 transition-colors min-h-[48px] min-w-[120px] text-center flex items-center justify-center touch-manipulation;
  }
  
  .btn-outline {
    @apply border border-primary text-primary px-6 py-3 rounded-md font-medium hover:bg-primary/10 transition-colors min-h-[48px] min-w-[120px] text-center flex items-center justify-center touch-manipulation;
  }
  
  /* Mobile-optimized button variants */
  @media (max-width: 640px) {
    .btn-primary, .btn-secondary, .btn-outline {
      @apply px-5 py-4 text-base w-full;
    }
  }

  .container-custom {
    @apply container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl;
  }
  
  /* Mobile optimized form layouts */
  @media (max-width: 640px) {
    /* Stacked form groups */
    .form-group {
      @apply flex flex-col gap-4 mb-6;
    }
    
    /* Full width on mobile */
    .form-row {
      @apply grid grid-cols-1 gap-4;
    }
    
    /* Improved spacing for small screens */
    .form-section {
      @apply bg-slate-50 p-6 rounded-lg mb-8 relative;
    }
    
    /* Sticky form navigation */
    .form-nav-sticky {
      @apply sticky bottom-0 left-0 right-0 bg-white border-t border-slate-200 p-4 z-10 flex justify-between;
    }
  }

  /* Custom styles for phone input */
  .phone-input {
    @apply w-full;
  }

  .phone-input .form-control {
    @apply w-full px-4 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary/50;
  }

  .phone-dropdown-button {
    @apply border border-slate-300 rounded-md bg-white;
  }

  .phone-dropdown {
    @apply bg-white border border-slate-200 rounded-md shadow-lg;
  }
  
  /* Fix for react-phone-input-2 container width */
  .react-tel-input .form-control {
    @apply w-full px-4 py-2 h-auto h-11;
    padding-left: 62px !important; /* Increased padding to prevent number from being hidden by flag */
    border-radius: 0.375rem !important;
  }
  
  .react-tel-input {
    @apply w-full;
  }

  /* Override the default styling for the phone input flag button */
  .react-tel-input .flag-dropdown {
    border-radius: 0.375rem 0 0 0.375rem !important;
    border-color: rgb(203 213 225) !important;
    background-color: white !important;
  }

  /* Style the selected flag button */
  .react-tel-input .selected-flag {
    border-radius: 0.375rem 0 0 0.375rem !important;
    background-color: white !important;
    padding: 0 0 0 8px !important;
    height: 2.75rem !important; /* Match the 44px (h-11) height */
    display: flex !important;
    align-items: center !important;
  }

  .react-tel-input .selected-flag:hover,
  .react-tel-input .selected-flag:focus {
    background-color: rgb(248 250 252) !important;
  }

  /* Fix the height to match other inputs */
  .react-tel-input .selected-flag .flag {
    display: flex;
    align-items: center;
  }

  /* Style the dropdown */
  .react-tel-input .country-list {
    border-radius: 0.375rem !important;
    border: 1px solid rgb(203 213 225) !important;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06) !important;
  }

  /* Style the search box */
  .react-tel-input .search-box {
    margin: 8px !important;
    border: 1px solid rgb(203 213 225) !important;
    border-radius: 0.375rem !important;
    padding: 8px !important;
  }

  /* Add focus styles to match other inputs */
  .react-tel-input .form-control:focus {
    outline: none !important;
    border-color: rgba(var(--color-primary), 0.5) !important;
    box-shadow: 0 0 0 2px rgba(var(--color-primary), 0.2) !important;
  }
  
  /* Make all form selects the same height for consistency */
  select {
    @apply h-11;
  }
}

